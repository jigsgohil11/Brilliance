@model Brilliance.Models.Entity.TCFForm




    <table class="table table-bordered table-condensed main-multi-field-wrapper">
        
        <tbody class="sub-multi-fields">

            @if (Model.TCFNotes.Count > 0)
            {
                foreach (var item in Model.TCFNotes)
                {
                    var index = Model.TCFNotes.IndexOf(item);
                    <tr class="multi-field" id="1">
                        <td width="1%">@(index+1)</td>
                        <td>
                            @Html.TextBoxFor(x => x.TCFNotes[index].Note, new { @class = "form-control" })

                        </td>
                    </tr>
                }

            }


            else
            {
              <tr class="multi-field" id="1">
                    <td width="1%">1</td>

                    <td width="98%">


                        <input type="text" name="TCFNotes[0].Note" id="TCFNotes[0].Note" class="form-control">

                    </td>

                    <td width="1%">
                        <button type="button" class="remove-field btn btn-xs btn-danger"><i class="fa fa-remove"></i></button>
                    </td>
                </tr>
            }
            
            
        </tbody>
        <tbody>
            
            <tr>
                <th colspan="14">
                <button type="button" class="add-field btn btn-xs btn-primary"><i class="fa fa-plus"></i>&nbsp;Add Row</button> 
                </th>
            </tr>
        </tbody>
    </table>


