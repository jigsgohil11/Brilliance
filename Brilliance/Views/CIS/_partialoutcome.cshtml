            }
        }
        </script>
        <script>
        $("#TemplateId").on('change', function () {
            alert('h')
             var url = '@Url.Action("MasterTemplate", "CIS")';
             $.ajax({
                 url: url,
                 method: 'get',
                 data: { TemplateId: $("#TemplateId").val() },
