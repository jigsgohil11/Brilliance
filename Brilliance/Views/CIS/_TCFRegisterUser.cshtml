@model Brilliance.Models.Entity.TCFForm
<div class="row" style="margin-left:-25px;margin-right:-25px;margin-top:-5px;">
    <div class="col-lg-12">
        <div class="portlet light">
            <div class="portlet-body form">
                    @Html.HiddenFor(m => m._User.UserID)
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>First Name</label>
                                @Html.TextBoxFor(m => m._User.FirstName, new { @class = "form-control m-input", @placeholder = "Enter First Name" })
                                @Html.ValidationMessageFor(m => m._User.FirstName)
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Last Name</label>
                                @Html.TextBoxFor(m => m._User.LastName, new { @class = "form-control m-input", @placeholder = "Enter Last Name" })
                                @Html.ValidationMessageFor(m => m._User.LastName)
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Email Address</label>
                                @Html.TextBoxFor(m => m._User.EmailID, new { @class = "form-control m-input", @placeholder = "Enter Email Address" })
                                @Html.ValidationMessageFor(m => m._User.EmailID)
                            </div>
                        </div>
                        
                    </div>
                    
                
            </div>
        </div>
    </div>
</div>