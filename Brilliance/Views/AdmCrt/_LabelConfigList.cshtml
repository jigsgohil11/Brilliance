@model Brilliance.Models.ViewModel.CrtAdminViewmodel
@using Brilliance.Infrastructure

<link href="~/assets/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />

<div class="row" style="text-align:right;margin-right: 16px;margin-bottom: 5px;">
    <button type="button" class="close" aria-label="Close" onclick="closeList();">
        <span aria-hidden="true">&times;</span>
    </button>
</div>


<div class="row" id="label_list">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered portlet-custom-decrease-padding">
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dt-responsive" width="100%" id="dt_division">
                    <thead>
                        <tr>
                            <th class="min-tablet">Action</th>
                            <th class="desktop">Client</th>
                            <th class="desktop">Instance Name</th>
                            @*<th class="desktop">Is Template?</th>*@

                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.labelconfiglist.Count > 0)
                        {
                            int index = 0;
                            foreach (var item in Model.labelconfiglist)
                            {
                                index++;
                                <tr>
                                    <td width="9%">
                                        <a class="action btn  btn-primary btn-xs @Constants.Class_Cannot_Access_Update" onclick="EditLabelPopup('@item.LabelconfigID');" title="Edit"><i class="btn-xs fa fa-pencil padding0"></i></a>
                                    </td>
                                    <td width="15%">@item.OrganizationName</td>
                                    <td width="15%">@item.InstanceName</td>

                                </tr>
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script src="~/assets/global/scripts/datatable.js" type="text/javascript"></script>
<script src="~/assets/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
<script>
   var table = $('#dt_division').DataTable({});

</script>