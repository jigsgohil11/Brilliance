<div style="margin-top:10px;">
    <table style="width:100%;border: 1px solid #e7ecf1;border-collapse: collapse;border-spacing: 0;page-break-inside:auto" class="table" id="dt_Assessmentcriteria" cellpadding="0">
        <thead class="flip-content" style="background: #4D648D;color: white;">
            <tr>
                <th colspan="3"></th>
                <th colspan="4">FROM</th>
                <th colspan="4">TO</th>
            </tr>
            <tr>
                <th class="all" style="border: 1px solid #e7ecf1;">Agent</th>
                <th class="desktop" style="border: 1px solid #e7ecf1;">Rate</th>
                <th class="desktop" style="border: 1px solid #e7ecf1;">Purpose</th>
                <th class="all" style="border: 1px solid #e7ecf1;">Stay Date</th>
                <th class="min-tablet" style="border: 1px solid #e7ecf1;">Stay Place</th>
                <th class="desktop" style="border: 1px solid #e7ecf1;">Mode</th>
                <th class="desktop" style="border: 1px solid #e7ecf1;">Contact No</th>
                <th class="all" style="border: 1px solid #e7ecf1;">Stay Date</th>
                <th class="min-tablet" style="border: 1px solid #e7ecf1;">Stay Place</th>
                <th class="desktop" style="border: 1px solid #e7ecf1;">Mode</th>
                <th class="desktop" style="border: 1px solid #e7ecf1;">Contact No</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Tables["Table1"].Rows.Count > 0)
            {
                foreach (DataRow row in Model.Tables["Table1"].Rows)
                {
                    <tr>
                        <td style="border: 1px solid #e7ecf1;">@row[0]</td>
                        <td style="border: 1px solid #e7ecf1;">@row[1]</td>
                        <td style="border: 1px solid #e7ecf1;">@row[2]</td>
                        <td style="border: 1px solid #e7ecf1;">
                            <span>Date : @row[3]</span><br />
                            <span>Time : @row[4]</span><br />
                            <span>Actual: @row[5]</span>
                        </td>
                        <td style="border: 1px solid #e7ecf1;">
                            <span>Location : @row[6]</span><br />
                            <span>Hotel : @row[7]</span><br />
                        </td>
                        <td style="border: 1px solid #e7ecf1;">@row[8]</td>
                        <td style="border: 1px solid #e7ecf1;">@row[9]</td>
                        <td style="border: 1px solid #e7ecf1;">
                            <span>Date : @row[10]</span><br />
                            <span>Time : @row[11]</span><br />
                            <span>Actual: @row[12]</span>
                        </td>
                        <td style="border: 1px solid #e7ecf1;">
                            <span>Location : @row[13]</span><br />
                            <span>Hotel : @row[14]</span><br />
                        </td>
                        <td style="border: 1px solid #e7ecf1;">@row[15]</td>
                        <td style="border: 1px solid #e7ecf1;">@row[16]</td>
                    </tr>
                }
            }
        </tbody>
    </table>
