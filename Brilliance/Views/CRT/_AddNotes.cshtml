            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class=""></i>
                    <span class="caption-subject bold uppercase">Notes</span>
                </div>
                <div class="caption font-dark pull-right">
                    <a class="btn btn-circle btn-icon-only btn-default" onclick="AddNewExpense();">
                        <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover table-header-fixed" id="dt_AddExpense">
